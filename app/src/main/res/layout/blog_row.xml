<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#c5e4df"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/post_image"
            android:layout_width="match_parent"
            android:layout_height="310dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/naruto" />

        <TextView
            android:id="@+id/post_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:padding="5dp"
            android:text="user_name"
            android:textColor="#be10b3"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/post_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:padding="5dp"
            android:text="post title goes here"
            android:textColor="#be10b3"
            android:textSize="18sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/post_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:padding="5dp"
            android:text="the post desc goes here"
            android:textColor="#be10b3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/post_like"
                android:layout_width="38dp"
                android:layout_height="32dp"
                android:layout_marginLeft="13dp"
                android:adjustViewBounds="true"
                android:background="#c5e4df"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_thumb_up_white_24dp" />

            <TextView
                android:id="@+id/number_like"
                android:layout_width="1dp"
                android:layout_height="32dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="203dp"
                android:layout_weight="1"
                android:allowUndo="false"
                android:clickable="false"
                android:ems="10"
                android:focusable="false"
                android:gravity="left"
                android:paddingRight="15dp"
                android:text="Name"
                android:textColor="#9eec70"
                android:textSize="19sp" />
            <ImageButton
                android:id="@+id/post_speak"
                android:layout_width="38dp"
                android:layout_height="32dp"
                android:layout_marginRight="20dp"
                android:adjustViewBounds="true"
                android:background="#c5e4df"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_record_voice_over_white_24dp" />


        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>